@model List<CookieList>

<h1 class="h3">Shopping Cart</h1>
<hr>
@{
    if (Model.Count!=0)
    {

        <div class="row">
            <div class="col-md-8">
                <table class="table hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Product Name</th>

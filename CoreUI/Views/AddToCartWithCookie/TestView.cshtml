                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           foreach (var item1 in item.CookieLists)
                           {
                                <tr>
                                <td>
                                    <img src="dsdsdjshdjsh" width="80" alt="">

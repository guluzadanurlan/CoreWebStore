<!-- computers section start -->
<div class="computers_section layout_padding">
   <div class="container">
      <h1 class="computers_taital">Computers & Laptop</h1>
   </div>
</div>
<div class="computers_section_2">
   <div class="container-fluid">
      <div class="computer_main">
         <div class="row">
            @{
               foreach (var item in Model)
               {

                  <div class="col-md-4">
                     <br>
                     <br>
                     <div><img class="img_comp" src="@Url.Content(item.LaptopPicPath)" alt="Image" /></div>
                     <h4 class="computer_text">@item.Laptop.Brand</h4>
                     <div class="text-center">
                        <p><b>Processor:</b> @item.Laptop.Cpu</p>
                        <p><b>Graphic card:</b>@item.Laptop.Gpu</p>
                        <p><b>Memory:</b>@item.Laptop.Ssd</p>
                        <p><b>Memory:</b>@item.Laptop.Hdd</p>
                        <p><b>Operating System:</b>@item.Laptop.OperatingSystem</p>
                        <p><b>Price:</b>@item.Laptop.Price</p>
                     </div>
                     @{
                        if (User.Identity.IsAuthenticated)
                        {
                           <form asp-controller="Cart" asp-action="AddToCart" method="post">
                              <input type="hidden" name="ProductId" value="@item.Laptop.Id">
                              <input type="hidden" name="Quantity" value="1">
                              <input type="hidden" name="ItemPicId" value="@item.Id">
                              <button type="submit" class="btn btn-success">Add to cart</button>
                           </form>
                        }
                        else
                        {
                           <button class="btn btn-success"><a href="/Account/Login">Add to cart</a></button>
                        }
                     }
                  </div>

               }
            }
         </div>
      </div>
   </div>
</div>
<!-- computers section end -->
